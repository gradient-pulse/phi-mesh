name: Update Tag Index and Tag Map

on:
  push:
    paths:
      - "phi-mesh/pulse/**/*.yml"
      - "meta/tag_index_utils.py"
      - "update_tag_index.py"
      - "generate_tag_map.py"
      - "docs/tag_map_template.html"
      - "docs/graph.js"
      - "meta/tag_index.yml"
      - "generate_graph_data.py"   # <— ensure changes to the generator re-run CI

jobs:
  update-tags:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout repository
        uses: actions/checkout@v3

      - name: Set up Python
        uses: actions/setup-python@v4
        with:
          python-version: "3.10"

      - name: Install dependencies
        run: pip install pyyaml networkx

      - name: Regenerate tag index
        run: python update_tag_index.py

      - name: Regenerate tag map
        run: python generate_tag_map.py

      # --- NEW: build graph_data.js from meta/tag_index.yml
      - name: Build graph_data.js
        run: python generate_graph_data.py

      # Single, final commit so graph_data.js can’t be overwritten by later steps
      - name: Commit and push changes
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          git add meta/tag_index.yml docs/tag_map.html docs/data.js docs/graph_data.js
          git commit -m "Auto-update tag index, map, and graph data" || echo "No changes to commit"
          git push || echo "Nothing to push"
